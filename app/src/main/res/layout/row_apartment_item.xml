<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/apartmentImageView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25000 $"
        android:layout_alignLeft="@id/apartmentImageView"
        android:layout_alignBottom="@id/apartmentImageView"
        android:background="#80000000"
        android:padding="10dp"
        android:layout_marginBottom="30dp"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/apartmentPriceTextView"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="50dp"
        android:text="Almaty"
        android:layout_below="@id/apartmentImageView"
        android:id="@+id/apartmentTitleTextView"/>

</RelativeLayout>